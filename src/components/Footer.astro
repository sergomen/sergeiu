---
import site from "../data/site.json";
const title = `Let's get in touch!`;
const {socials, author, profile_pic, resume} = site;
---
<footer id="footer">
    <div class="footer-left">
        <h2>{title}</h2>
        <p>My inbox is always open. <br />
         Feel free to mail me about any relevant job updates, questions, critic.<br />
        <i>You can download <a class="link" href={resume} target="_blank">my resume</a> here</i></p>
        <div class="socials">
            {socials.map((social) => (
                <div class="social-icon tooltip-container">
                    <span class="tooltip">{social.title}</span>
                    <a href={social.link} target="blank">
                        <i class={`devicon-${social.icon}-plain`}></i>
                    </a>
                </div>
            ))}
        </div>
    </div>
    <div class="footer-right">
        <img width="200" height="auto" src={profile_pic} alt={author} />
    </div> 
</footer>
<div class="copyright">
    September, 2022 
    <p>Revised by Sergei Iu</p>
    <p>Designed & built by <a href="https://daily-dev-tips.com/posts/recreating-my-portfolio-website-in-astro/" target="_blank" rel="nofollow noopener noreferrer"><span>Chris Bongers.</span></a>
    Inspired by <a href="https://chandrikadeb7.github.io/" target="_blank" rel="nofollow noopener noreferrer"><span>Chandrika Deb.</span></a></p>
    <p></p>
</div>

<style lang="scss">
footer {
    display: flex;
    flex-direction: row;
    align-items: center;
    margin-bottom: 100px;
    h2 {
        margin-top: 0;
    }
    .footer-right {
        padding: 10px;
        background: rgb(227, 236, 238);
        margin: 5px;
        margin-left: 3rem;
        max-width: 200px;
        border-style: solid;
        border-color: #115de9;
        padding-bottom: 0;
    }
    .footer-bottom {
        // display: flex;
        // flex-direction: row;
    }
    .social-icon {
        background: #fff;
        padding: 10px;
        margin: 5px;
        border-radius: 5px;
        display: inline-block;
            a {
                display: flex;
                justify-content: center;
                align-items: center;
                text-decoration: none;
            i {
                width: 24px;
                height: 24px;
                font-size: 1.5rem;
            }
        }
    }
}

.copyright {
    margin: auto;
    width: 50%;
    // border: 3px solid green;
    padding: 10px;
    text-align: center;
}

span {
    color: rgb(27, 24, 168);
    font-size: 14px;
    text-decoration: none;
    text-decoration-skip-ink: auto;
}
p {
    margin: 0;
}
</style>